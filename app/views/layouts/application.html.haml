!!! 5
%html(lang="en")
  %head
    .fixed-top
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Stockapp"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag '/apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag '/apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag '/apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag '/apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag '/favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"
    %link{:href => "css/bootstrap.min.css", :rel => "stylesheet"}/


  %body
%navbar.navbar-default.navbar-fixed-topdefault
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Stockapp
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav

      %form.navbar-form.navbar-left
        .form-group
          %input.form-control{:placeholder => "ノート名で検索", :type => "text"}/
        %button.btn.btn-default{:type => "submit"} Submit
        

      %ul.nav.navbar-nav.navbar-right
        -if user_signed_in?
          %li= link_to "Log out", "/users/sign_out", :method => :delete
        -else
          %li= link_to "Log in", "/users/sign_in"

        %li  
          %button.btn.btn-default{"aria-label" => "right Align", :type => "button"}
          %span.glyphicon-menu-hamburger{"aria-hidden" => "true"}
        
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "", :role => "button"}
            Dropdown
            %span.caret
          %ul.dropdown-menu
            %li
              %a{:href => "/users/password/edit"} user edit
            %li
              %a{:href => "#"} Another action
            %li
              %a{:href => "#"} Something else here
            %li.divider{:role => "separator"}
            %li
              %a{:href => "/users/sign_out", :method => :delete} Log out
            / Include all compiled plugins (below), or include individual files as needed
            %script{:src => "js/bootstrap.min.js"}
            / jQuery (necessary for Bootstrap's JavaScript plugins)
            %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"}
    / /.navbar-collapse
  / /.container-fluid

  .container
  .row
  .col-lg-2
  .well.sidebar-nav
    %h3 タクス一覧
    %ul.nav.nav-list
    %li= link_to "Task list", "/projects"
    %li= link_to "Note List", "/notes"


    


  %body
    = bootstrap_flash
    = yield

    
     


!!! 5
%html(lang="en")
  %head
    .fixed-top
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Stockapp"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag '/apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag '/apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag '/apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag '/apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag '/favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"
    %link{:href => "css/bootstrap.min.css", :rel => "stylesheet"}/


  %body
%nav.navbar.navbar-.navbar-fixed-top{:role => "navigation"} 
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Stockapp
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav

      %form.navbar-form.navbar-left
        .form-group
          %input.form-control{:placeholder => "ノート名で検索", :type => "text"}/
        %button.btn.btn-default{:type => "submit"} Submit
        
        

      %form.nav.navbar-nav.navbar-right
        %li.glyphicon
          %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "", :role => "button"}
            %span.glyphicon-menu-hamburger{"aria-hidden" => "true"}
            
          %ul.dropdown-menu
            %li
              %a{:href => "/users/password/edit"} 各種設定
            %li.divider{:role => "separator"}
            -if user_signed_in?
              %li= link_to "ログアウト", "/users/sign_out", :method => :delete
            -else
              %li= link_to "ログイン", "/users/sign_in"
            
            / Include all compiled plugins (below), or include individual files as needed
            / jQuery (necessary for Bootstrap's JavaScript plugins)
    / /.navbar-collapse
  / /.container-fluid
  

  .col-md-2
  .well.sidebar-nav.affix{:role => "complementary"}
    %h3 タクス一覧
    %ul.nav.nav-list
    %li= link_to "Task list", "/projects"
    %li= link_to "Note List", "/notes"

  .col-md-5
    %li
    %button.btn.btn-link{:type => "submit"} タスクを選択してください
    
  
    .col-md-5

      %button.btn.btn-link{:type => "submit"} タスクを選択してください
    
    
    
    = bootstrap_flash
    = yield 

